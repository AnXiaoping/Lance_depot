<!DOCTYPE html>
<html>
<head>
  <title>Lance's test</title>
  <%= stylesheet_link_tag :depot %>
  <%= stylesheet_link_tag :bootstrap%>
  <%= javascript_include_tag :bootstrap%>
  <%= csrf_meta_tags %>
</head>
<body id="store">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Lance's test"%>
  </div>
  <div id="columns">
    <div id="side">
      <div id="cart">
        <%= render @cart%>
      </div>
      <a href="/">Home</a><br>
      <a href="/line_items">Line Items</a><br>
      <a href="/products">Products</a><br>
      <a href="/carts">Carts</a><br>
    </div>
  </div>
  <div id="main">
    <%= yield%>
  </div>

</body>
</html>
