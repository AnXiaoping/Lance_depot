<h2 class="cart_title">Lance's Progmatic Cart</h2>
<table class="table-hover">
  <tr>
    <th>Quantity</th>
    <th>Title</th>
    <th>Price</th>
  </tr>
  <%= render(cart.line_items)%>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price)%></td>
  </tr>
</table>
<%= button_to "Empty cart", cart, :method => :delete, :confirm => "Are you sure?", :class => "btn btn-default"%>
